h3 Department: {{department.name}}
div 
  b Info:
div(style="margin-bottom:20px") {{department.info}}
div 
  b Address:
  div(style="margin-bottom:20px") {{department.streetAdress}}, {{department.zipCode}} {{department.town}}
hr

table.table.table-striped
  thead
    td P-number
    td First Name
    td Last Name
    td Salary
    td Actions
  tbody
    tr(ng-repeat="employee in employees")
      td {{employee.pno}}
      td {{employee.firstname}}
      td {{employee.lastname}}
      td {{employee.salary}}
      td
        a(href="/employees/{{employee._id}}") Show
        span(style="display:inline-block;width:20px")
        a(href="/employees/{{employee._id}}/edit") Edit
        span(style="display:inline-block;width:20px")
        a(href="/employees/{{employee._id}}/delete") Delete

a.btn(href="/employees") Back
button.btn.btn-success(ng-click="new()") New Employee
