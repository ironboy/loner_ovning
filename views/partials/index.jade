h3 Contacts

table.table.table-striped
  thead
    td First Name
    td Last Name
    td Age
    td(colspan="3") Actions
  tbody
    tr(ng-repeat="contact in contacts")
      td {{contact.firstname}}
      td {{contact.lastname}}
      td {{contact.age}}
      td
        a(href="/contacts/{{contact._id}}") Show
      td
        a(href="/contacts/{{contact._id}}/edit") Edit
      td
        a(href="/contacts/{{contact._id}}/delete") Delete

button.btn.btn-success(ng-click="new()") New Contact
